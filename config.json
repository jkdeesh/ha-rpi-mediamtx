{
  "name": "MediaMTX Add-on",
  "version": "latest",
  "slug": "mediamtx",
  "description": "Create RTSP / WebRTC server to broadcast streams, thanks to https://github.com/bluenviron/mediamtx",
  "arch": ["aarch64", "amd64", "armhf", "armv7"],
  "boot": "auto",
  "map": [
    "rtsp:tcp->:8554",
    "rtmp:tcp->:1935"
  ],
  "startup": "application",
  "image": "bluenviron/mediamtx",
  "ports": {
    "8556/tcp": 8554,
    "1936/tcp": 1935
  },
  "options": {
    "MTX_PROTOCOLS": "tcp",
    "MTX_PATHS_ALL_RUNONDEMAND": "echo 'incoming'",
    "MTX_PATHS_ALL_RUNONDEMANDRESTART": "yes",
    "MTX_PATHS_CAM_SOURCE": "rpiCamera"
  },
  "schema": {
    "MTX_PROTOCOLS": "str",
    "MTX_PATHS_ALL_RUNONDEMAND": "str",
    "MTX_PATHS_ALL_RUNONDEMANDRESTART": "str",
    "MTX_PATHS_CAM_SOURCE": "str"
  }
}
